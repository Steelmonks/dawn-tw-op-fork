<section
  class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'
  style='background: linear-gradient(to bottom, {{ section.settings.background_color }} 0%, #090A0C 100%); padding: {{ section.settings.padding }}px;'
>
  <h2 class='twcss-text-white twcss-text-center'>{{ section.settings.heading }}</h2>
  <p class='twcss-text-white'>
    {{ section.settings.description }}
  </p>
  <div>
    <!-- Toggle Button -->
    <button
      type='button'
      class='twcss-w-full twcss-text-left twcss-bg-white twcss-p-4 twcss-rounded-lg twcss-shadow twcss-font-bold twcss-text-lg twcss-text-brandblack twcss-border twcss-border-gray-200'
      style='background-color: #fff !important;'
      onclick="document.getElementById('contact-form-container').classList.toggle('twcss-hidden')"
    >
      Zum Formular
    </button>

    <!-- Collapsible Form Container -->
    <div
      id='contact-form-container'
      class='twcss-mt-4 twcss-bg-white twcss-rounded-lg twcss-shadow twcss-p-4 twcss-hidden'
    >
      <div class='powr-form-builder' id='4dd3d542_1659935817'></div>
      <script src='https://www.powr.io/powr.js?platform=shopify' defer></script>
    </div>
  </div>
</section>

<section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
  <div class='twcss-text-sm twcss-text-black'>
    Oder schreibe uns eine Email an
    <strong>info@steelmonks.com</strong>
  </div>
  <div class='twcss-text-xs twcss-text-black twcss-mt-1'>
    * Bitte beachte: Wenn Du innerhalb von 5 Werktagen keine Antwort auf Deine E-Mail erhalten hast, überprüfe bitte
    unbedingt Deinen Spam-Ordner.
  </div>
</section>

{% schema %}
{
  "name": "Contact Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wir helfen Dir gerne weiter."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Hast Du Fragen zu Deiner Bestellung? Oder möchtest Du vielleicht ein Feedback hinterlassen? Fülle einfach das Formular aus und wir helfen Dir gerne weiter."
    },
    {
      "type": "header",
      "content": "Style Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0044cc"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 20,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Contact Page",
      "category": "Custom"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
