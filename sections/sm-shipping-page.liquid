<main
  class='twcss-flex twcss-flex-col twcss-gap-12 twcss-justify-center twcss-items-center'
  style='padding: {{ section.settings.padding }}px;'
>
  <!-- Flex row for heading, text, and image -->
  <div class='twcss-flex twcss-justify-center twcss-items-center twcss-gap-12'>
    <!-- Text group: heading + paragraph -->
    <div class='twcss-flex twcss-flex-col twcss-items-center twcss-text-center'>
      <h2 class='twcss-font-bold twcss-text-3xl'>{{ section.settings.heading }}</h2>
      <br>
      <p style='font-style: italic;' class='twcss-text-lg'>{{ section.settings.first_text }}</p>
    </div>
    <!-- Image -->
    {% if section.settings.first_image != blank %}
      <img
        src='{{ section.settings.first_image | image_url: width: 110 }}'
        alt='{{ section.settings.heading | escape }}'
        width='110'
        height='110'
        class='twcss-object-contain'
        loading='lazy'
      >
    {% endif %}
  </div>
  <p class='twcss-text-center'>{{ section.settings.second_text }}</p>
  {% if section.settings.main_image != blank %}
    <img
      src='{{ section.settings.main_image | image_url: width: 800 }}'
      alt='{{ section.settings.main_image.alt | escape }}'
      width='800'
      height='auto'
      class='twcss-w-full twcss-h-auto twcss-object-contain'
      loading='lazy'
    >
  {% endif %}

  <section class='twcss-grid twcss-gap-8 md:twcss-grid-cols-3 twcss-text-center twcss-px-8 twcss-py-12 twcss-bg-brandblack twcss-text-brandwhite'>
    {% for block in section.blocks %}
      <div
        style='background-color:rgba(229, 231, 235, 0.12); padding: 20px;'
        class='twcss-flex twcss-flex-col twcss-items-center twcss-gap-4'
      >
        {% if block.settings.icon != blank %}
          <img
            src='{{ block.settings.icon | image_url: width: 50 }}'
            alt='{{ block.settings.title | escape }}'
            width='50'
            height='50'
            class='twcss-mx-auto twcss-mb-2 twcss-object-contain'
            loading='lazy'
          >
        {% endif %}
        <h3 class='twcss-text-2xl twcss-font-bold twcss-text-brandwhite'>{{ block.settings.title }}</h3>
        <p class='twcss-text-base twcss-text-brandwhite'>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </section>

  <section class='twcss-flex twcss-flex-col twcss-p-10'>
    {{ section.settings.content }}
  </section>
</main>

{% schema %}
{
  "name": "Shipping Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Versandbedingungen"
    },
    {
      "type": "text",
      "id": "first_text",
      "label": "First paragraph",
      "default": "wir helfen Dir gerne weiter."
    },
    {
      "type": "text",
      "id": "second_text",
      "label": "Second paragraph",
      "default": "Hast Du Fragen zu unserem Versand? Oder möchtest Du wissen, wie wir Deine Bestellung versenden? Hier findest Du alle Informationen. "
    },
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "Title Image"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "info_grid_item",
      "name": "Info Grid Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shipping Page"
    }
  ]
}
{% endschema %}
