        <div class='twcss-grid twcss-grid-cols-1 lg:twcss-grid-cols-3 twcss-items-center twcss-gap-6 twcss-mb-4'>
          <div class='twcss-flex twcss-flex-col twcss-items-center twcss-gap-2 twcss-h-[600px]'>
