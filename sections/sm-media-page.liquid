    <h1 class='twcss-text-center twcss-text-4xl twcss-font-bold'>
      {{ section.settings.title }}
    </h1>
    <article class='twcss-grid twcss-grid-cols-1 lg:twcss-grid-cols-3 twcss-gap-4'>
      <!-- Hero Image 1 -->
      <div
        style='background-image: url({{ section.settings.hero_image1 | image_url: width: 400 }})'
        class='twcss-flex twcss-flex-col twcss-gap-4 twcss-items-center twcss-justify-center twcss-max-w-[400px] twcss-max-h-[400px] twcss-bg-cover twcss-bg-center twcss-bg-no-repeat twcss-p-10'
      >
        <h2 class='twcss-text-3xl twcss-font-bold twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image1_title }}
        </h2>
        <p class='twcss-text-lg twcss-italic twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image1_text }}
        </p>
      </div>
      <!-- Hero Image 2 -->
      <div
        style='background-image: url({{ section.settings.hero_image2 | image_url: width: 400 }})'
        class='twcss-flex twcss-flex-col twcss-gap-4 twcss-items-center twcss-justify-center twcss-max-w-[400px] twcss-max-h-[400px] twcss-bg-cover twcss-bg-center twcss-bg-no-repeat twcss-p-10'
      >
        <h2 class='twcss-text-3xl twcss-font-bold twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image2_title }}
        </h2>
        <p class='twcss-text-lg twcss-italic twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image2_text }}
        </p>
      </div>
      <!-- Hero Image 3 -->
      <div
        style='background-image: url({{ section.settings.hero_image3 | image_url: width: 400 }})'
        class='twcss-flex twcss-flex-col twcss-gap-4 twcss-items-center twcss-justify-center twcss-max-w-[400px] twcss-max-h-[400px] twcss-bg-cover twcss-bg-center twcss-bg-no-repeat twcss-p-10'
      >
        <h2 class='twcss-text-3xl twcss-font-bold twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image3_title }}
        </h2>
        <p class='twcss-text-lg twcss-italic twcss-text-center twcss-text-brandwhite'>
          {{ section.settings.hero_image3_text }}
        </p>
      </div>
    </article>
  </section>

  <section class='twcss-flex twcss-flex-col twcss-gap-8 twcss-w-full'>
