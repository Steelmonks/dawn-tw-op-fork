<main class='twcss-flex twcss-flex-col twcss-gap-12' style='padding: {{ section.settings.padding }}px;'>
  <h2 class='twcss-text-center twcss-text-4xl twcss-font-bold'>{{ section.settings.heading }}</h2>
  <p style='font-style: italic;' class='twcss-text-center twcss-text-lg'>{{ section.settings.subheading }}</p>
  <p class='twcss-text-lg'>{{ section.settings.description }}</p>

  <section class='twcss-grid twcss-gap-8 md:twcss-grid-cols-3 twcss-text-center twcss-px-8 twcss-py-12 twcss-bg-brandblack twcss-text-brandwhite'>
    {% for block in section.blocks %}
      <div
        style='background-color:rgba(229, 231, 235, 0.12); padding: 20px;'
        class='twcss-flex twcss-flex-col twcss-items-center twcss-gap-4'
      >
        {% if block.settings.icon != blank %}
          <img
            src='{{ block.settings.icon | image_url: width: 50 }}'
            alt='{{ block.settings.title | escape }}'
            width='50'
            height='50'
            class='twcss-mx-auto twcss-mb-2 twcss-object-contain'
            loading='lazy'
          >
        {% endif %}
        <h3 class='twcss-text-2xl twcss-font-bold twcss-text-brandwhite'>{{ block.settings.title }}</h3>
        <p class='twcss-text-base twcss-text-brandwhite'>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </section>

  <section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
    <!-- Toggle Button -->
    <button
      type='button'
      class='twcss-w-full twcss-text-left twcss-bg-white twcss-p-4 twcss-rounded-lg twcss-shadow twcss-font-bold twcss-text-lg twcss-text-brandblack twcss-border twcss-border-gray-200'
      style='background-color: #fff !important;'
      onclick="document.getElementById('contact-form-container').classList.toggle('twcss-hidden')"
    >
      Zum Formular
    </button>

    <!-- Collapsible Form Container -->
    <div
      id='contact-form-container'
      class='twcss-mt-4 twcss-bg-white twcss-rounded-lg twcss-shadow twcss-p-4 twcss-hidden'
    >
      <div class='powr-form-builder' id='4dd3d542_1659935817'></div>
      <script src='https://www.powr.io/powr.js?platform=shopify' defer></script>
    </div>
  </section>

  <section class='twcss-flex twcss-flex-col twcss-p-10'>
    {{ section.settings.content }}
  </section>
</main>

{% schema %}
{
  "name": "Cancelation Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 36
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cancelation Page",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
