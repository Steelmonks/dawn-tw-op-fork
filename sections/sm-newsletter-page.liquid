<main class='twcss-flex twcss-flex-col twcss-gap-6' style='padding: {{ section.settings.padding }}px;'>
  <h2 class='twcss-text-center'>{{ section.settings.heading }}</h2>
  <p class='twcss-text-center' style='font-style: italic;'>{{ section.settings.subheading }}</p>
  <div>
    <!-- Toggle Button -->
    <button
      type='button'
      class='twcss-w-full twcss-text-left twcss-bg-white twcss-p-4 twcss-rounded-lg twcss-shadow twcss-font-bold twcss-text-lg twcss-text-brandblack twcss-border twcss-border-gray-200'
      style='background-color: #fff !important;'
      onclick="document.getElementById('contact-form-container').classList.toggle('twcss-hidden')"
    >
      {{ section.settings.button_text }}
    </button>

    <!-- Collapsible Form Container -->
    <div
      id='contact-form-container'
      class='twcss-mt-4 twcss-bg-white twcss-rounded-lg twcss-shadow twcss-p-4 twcss-hidden'
    >
      <div class='klaviyo-form-QXQCMv'></div>
    </div>
  </div>
  <p class='twcss-text-center'>{{ section.settings.after_form_text }}</p>
  <p class='twcss-text-center'>{{ section.settings.after_form_text_2 }}</p>
</main>

{% schema %}
{
  "name": "Newsletter Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Newsletter"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "wir freuen uns auf Dich!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "ðŸ“¯ Hier kannst Du Dich anmelden"
    },
    {
      "type": "text",
      "id": "after_form_text",
      "label": "Text under form",
      "default": "Danke fÃ¼r dein Interesse an unserem Newsletter!"
    },
    {
      "type": "text",
      "id": "after_form_text_2",
      "label": "Second text under form",
      "default": "Wir behandeln deine Daten vertraulich."
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Newsletter Page"
    }
  ]
}
{% endschema %}
