      "id": "heading_2",
      "label": "Heading (Section 2)"
    },
    {
      "type": "richtext",
      "id": "content_2",
      "label": "Content (Section 2)"
    },
    {
      "type": "text",
      "id": "heading_3",
      "label": "Heading (Section 3)"
    },
    {
      "type": "richtext",
      "id": "content_3",
      "label": "Content (Section 3)"
    },
    {
      "type": "text",
      "id": "surfaces_header",
      "label": "Surfaces Header",
      "default": "Unsere Oberfl√§chen"
    },
    {
      "type": "text",
      "id": "heading_4",
      "label": "Heading (Section 4)"
    },
    {
      "type": "richtext",
      "id": "content_4",
      "label": "Content (Section 4)"
    }
  ],
  "blocks": [
    {
      "type": "first_grid_image",
