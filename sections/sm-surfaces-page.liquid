<main
  class='twcss-flex twcss-flex-col twcss-gap-12 twcss-items-center twcss-justify-center'
  style='padding: {{ section.settings.padding }}px;'
>
  <!-- Main Hero Image -->
  {% if section.settings.main_image != blank %}
    <img
      src='{{ section.settings.main_image | image_url: width: 800 }}'
      alt='{{ section.settings.main_image.alt | escape }}'
      width='800'
      height='250'
      class='twcss-w-full twcss-h-[250px] twcss-object-contain '
      loading='lazy'
    >
  {% endif %}

  <!-- Title and Text -->
  <section class='twcss-flex twcss-flex-col twcss-gap-12 twcss-p-10 twcss-rounded-lg'>
    <h2 class='twcss-text-4xl twcss-font-bold twcss-text-brandblack twcss-text-center'>
      {{ section.settings.heading_1 }}
    </h2>
    <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_1 }}</p>
  </section>

  <!-- First Image grid -->
  <section class='twcss-grid twcss-grid-cols-2 md:twcss-grid-cols-4'>
    {% for block in section.blocks %}
      {% if block.type == 'first_grid_image' %}
        <img
          src='{{ block.settings.image | image_url: width: 340 }}'
          alt='{{ block.settings.image.alt | escape  }}'
          width='340'
          height='100'
          class='twcss-object-contain'
          loading='lazy'
        >
      {% endif %}
    {% endfor %}
  </section>

  <!-- Couloured Container and Text -->
  <section
    style='width: 100%'
    class='twcss-flex twcss-flex-col twcss-p-10 twcss-rounded-lg twcss-bg-brandblack twcss-text-brandwhite'
  >
    <div class='twcss-flex twcss-flex-col twcss-gap-4 twcss-text-brandwhite twcss-text-center'>
      <h2 class='twcss-text-4xl twcss-font-bold twcss-text-brandwhite'>{{ section.settings.heading_2 }}</h2>
      <p class='twcss-text-lg twcss-text-brandwhite'>{{ section.settings.content_2 }}</p>
    </div>
  </section>

  <!-- Text and Image Grid -->
  <section class='twcss-grid twcss-grid-cols-1 md:twcss-grid-cols-2 twcss-gap-4'>
    <div class='twcss-flex twcss-flex-col twcss-gap-12 twcss-text-brandblack twcss-p-10'>
      <h2 class='twcss-text-4xl twcss-font-bold twcss-text-brandblack'>
        {{ section.settings.heading_3 }}
      </h2>
      <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_3 }}</p>
    </div>
    <div class='twcss-bg-brandblack twcss-max-w-[700px] twcss-p-10 twcss-rounded-lg twcss-items-center'>
      <h3 class='twcss-text-3xl twcss-font-bold twcss-text-brandwhite twcss-text-center twcss-mb-8'>
        {{ section.settings.surfaces_header }}
      </h3>
      <div class='twcss-grid twcss-grid-cols-1 md:twcss-grid-cols-2 twcss-gap-8'>
        {% for block in section.blocks %}
          {% if block.type == 'surface' %}
            <div class='twcss-flex twcss-flex-col twcss-items-center'>
              <img
                src='{{ block.settings.image | image_url: width: 300 }}'
                alt=''
                class='twcss-object-contain twcss-mb-2'
                width='300'
                height='auto'
              >
              <div class='twcss-text-brandwhite twcss-text-center twcss-text-lg'>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Secondary Image Grid -->
  <section class='twcss-grid twcss-grid-cols-2 twcss-gap-4 twcss-items-center twcss-justify-center'>
    {% for block in section.blocks %}
      {% if block.type == 'secondary_grid_image' %}
        <div class='twcss-flex twcss-flex-col twcss-gap-4'>
          <img
            src='{{ block.settings.image | image_url: width: 340 }}'
            alt='{{ block.settings.image.alt | escape  }}'
            width='340'
            height='100'
            class='twcss-object-contain'
            loading='lazy'
          >
          <p class='twcss-text-2xl twcss-text-brandblack twcss-text-center twcss-font-bolt'>
            {{ block.settings.text }}
          </p>
        </div>
      {% endif %}
    {% endfor %}
  </section>

  <!-- Secondary Title and Text -->
  <section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
    <h2 class='twcss-text-4xl twcss-font-bold twcss-text-brandblack twcss-text-center'>
      {{ section.settings.heading_4 }}
    </h2>
    <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_4 }}</p>
  </section>
</main>

